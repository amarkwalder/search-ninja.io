{
    "presets": [
        [
            "@babel/preset-env",
            {
                "targets": {
                    "browsers": "defaults",
                    "node": "12"
                },
                "useBuiltIns": "usage",
                "corejs": {
                    "version": 3,
                    "proposals": true
                },
                "loose": true
            }
        ],
        "@babel/preset-typescript",
        "@babel/preset-react"
    ],
    "plugins": [
        "react-hot-loader/babel",
        "@babel/plugin-transform-runtime",
        "@babel/proposal-class-properties",
        "@babel/proposal-object-rest-spread"
    ]
}
